<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/touchable_white">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="72dp"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:layout_marginRight="72dp">

        <TextView
            android:id="@+id/text1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:paddingBottom="2dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:singleLine="true"
            android:text="Medicine name"
            android:textColor="@color/android_blue_darker"
            android:textSize="20dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/text2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginRight="16dp"
            android:ellipsize="marquee"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:paddingBottom="2dp"
            android:paddingTop="0dp"
            android:singleLine="true"
            android:text="100 microgramos"
            android:textColor="#000"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginRight="16dp"
            android:ellipsize="marquee"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:paddingBottom="2dp"
            android:paddingTop="0dp"
            android:singleLine="true"
            android:text="50 frascos de 100 ml"
            android:textColor="#000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/text4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1px"
            android:layout_marginRight="16dp"
            android:fontFamily="sans-serif-light"
            android:gravity="top"
            android:paddingBottom="2dp"
            android:paddingTop="5dp"
            android:singleLine="false"
            android:text="Med description large name Med description large name Med description large name"
            android:textAllCaps="false"
            android:textColor="@color/android_blue_darker"
            android:textSize="14dp"
            android:visibility="visible" />
    </LinearLayout>

    <ImageView
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:id="@+id/prospect_icon"
        android:layout_alignParentRight="true"
        android:src="@drawable/abc_ic_star_black_36dp"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:scaleType="fitCenter"/>

    <ImageView
        android:id="@+id/presentation_image"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:padding="10dp"
        android:scaleType="fitCenter"
        android:layout_marginTop="5dp"/>


</RelativeLayout>